        button {
            position: relative;
            padding: 0.6rem 3rem;
            width: 17rem;
            color: #e1dede;
            background: #aaaaaa;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.2rem;
            border-radius: 50px;
            border: none;
            transition: 0.5s;
            cursor: pointer;
            overflow: hidden;

        }

        button:hover {
            color: var(--clr);
            text-shadow: 0 0 15px var(--clr),
                0 0 40px var(--clr);
        }

        button span {
            position: relative;
            z-index: 1;
        }

        button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: var(--x);
            transform: translate(-50%, -50%);
            width: 160px;
            height: 120px;
            background: radial-gradient(white 10%, #BEFFF7, #9EDDFF, #6499E9, #aaaaaa, transparent, transparent, transparent);
            transition: 0.5s, top 0s, left 0s;
            opacity: 0;
        }

        button:hover::before {
            opacity: 1;
        }

        button::after {
            content: '';
            position: absolute;
            width: calc(100% + 20px);
            height: calc(100% + 20px);
            background-size: 600%;
            border-radius: 47px;
            filter: blur(10px);
        }


        .body2 {

            width: 100%;
