        .circular_laser {
            position: absolute;
            top: 0;
            left: 28vw;
            width: 72vw;
            height: 75vh;
            z-index: 0;
        }

        .circular_laser video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* fills container without distortion */
            z-index: 1;
            /* sits below vignette */
        }

        .circular_laser::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            /* video stays clickable */
            background: radial-gradient(circle, rgba(0, 0, 0, 0) 70%, rgba(0, 0, 0, 0.8) 100%);
            z-index: 1;
            /* sits above video, below text */
        }

        .des1 {
